<main>
<ul  class = "user-list">
     <% @users.each do |user| %>
        <li class = "user-container">
            <div class = "user-picture-container">
              <img src="<%= user.photo %>" alt="user.name">
            </div>
            <div class = "user-info">
                <%= link_to user.name, user_path(user), class:"user-link" %>
                <p class = user-detail> Number of post: <%= user.posts.count %></p>
            </div>
        </li>
    <% end %>
</ul>
</main>
